<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport issue
            </p>
        </field>
    </record>
    

    <menuitem
        id="sport_menu"
        name="Sport Association"
        sequence="10"/>
  

    <menuitem
        id="sport_issue_menu"
        name="Sport Issues"
        action="sports_association.action_sport_issue"
        parent="sports_association.sport_menu"
        sequence="10"/>

    <menuitem
        id="sport_clinic_menu"
        name="Sport Clinics"
        action="sports_association.action_sport_clinic"
        parent="sports_association.sport_menu"
        sequence="20"/>

    <menuitem
        id="sport_sport_menu"
        name="Sports"
        action="sports_association.action_sport_sport"
        parent="sports_association.sport_menu"
        sequence="30"/>

        <menuitem
        id="sport_team_menu"
        name="Sport Teams"
        action="sports_association.action_sport_team"
        parent="sports_association.sport_menu"
        sequence="40"/>

        <menuitem
        id="sport_player_menu"
        name="Players"
        action="sports_association.action_sport_player"
        parent="sports_association.sport_menu"
        sequence="50"/>

</odoo>