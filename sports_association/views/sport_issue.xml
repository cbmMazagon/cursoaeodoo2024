<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_sport_issue" model="ir.actions.act_window">
        <field name="name">Sport Issues</field>
        <field name="res_model">sport.issue</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport issue
            </p>
        </field>
    </record>
    
    <menuitem
        id="sport_menu"
        name="Sport Associations"
        sequence="10"/>

        <menuitem
            id="sport_issue_menu"
            name="Sport Issues"
            action="sports_association.action_sport_issue"
            parent="sports_association.sport_menu"
            sequence="10"/>

</odoo>

